<%= render "layouts/errors", :object => @question %>

<%= form_for @question, :html => { :multipart => true } do |f| %>
  <ul class="formList list-unstyled">

    <li>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </li>

    <li>
      <%= f.label :body %><br>
      <%= f.text_field :body %>
    </li>

    <li class="submit">
      <%= f.submit "Submit", :class => "btn btn-sm btn-success" %>
    </li>
  </ul>
<% end %>
